{
  "dataset_reader": {
    "type": "etd_HMCN_abstract",
    "class_index_dir": "/misc/projdata3/info_fil/finance/simon_test/ETD_cataloguing/allennlp-test/data/index/all_etd_title_abstract_class_index.json",
    "sh_path_dir": "/misc/projdata3/info_fil/finance/simon_test/ETD_cataloguing/allennlp-test/data/lcsh/sh_path.json",
    "merge_title_abstract": true,
    "lazy": true,
    "token_indexers": {
        "token_characters": {
            "type": "characters",
            "character_tokenizer": {
                "byte_encoding": "utf-8",
                "end_tokens": [
                    260
                ],
                "start_tokens": [
                    259
                ]
            }
        },
        "glove_tokens": {
            "type": "single_id",
            "lowercase_tokens": true
        },
        "fasttext_tokens":{
            "type": "single_id",
            "lowercase_tokens": true               
        }
    }
  },
  "train_data_path": "/misc/projdata3/info_fil/finance/simon_test/ETD_cataloguing/allennlp-test/data/all_etd_title_abstract_train_new.json",
  "validation_data_path": "/misc/projdata3/info_fil/finance/simon_test/ETD_cataloguing/allennlp-test/data/cuhk_etd_title_abstract_validate_new.json",
  "model": {
    "type": "etd_HMCN_hier_att",
    "sh_hierarchy_dir": "/misc/projdata3/info_fil/finance/simon_test/ETD_cataloguing/allennlp-test/data/index/all_etd_title_abstract_hierarchy.json",
    "text_field_embedder": {
        "token_characters": {
            "type": "character_encoding",
            "dropout": 0.2,
            "embedding": {
                "embedding_dim": 20,
                "num_embeddings": 262
            },
            "encoder": {
                "type": "cnn",
                "embedding_dim": 20,
                "ngram_filter_sizes": [
                    5
                ],
                "num_filters": 100
            }
        },
        "glove_tokens": {
            "type": "embedding",
            "pretrained_file": "/uac/spc/proj/fpredict/finance/ETD_cataloguing/allennlp-test/word_vector/glove/glove.840B.300d.txt",
            "embedding_dim": 300,
            "trainable": false
        },
        "fasttext_tokens": {
            "type": "embedding",
            "pretrained_file": "/uac/spc/proj/fpredict/finance/ETD_cataloguing/allennlp-test/word_vector/fasttext/crawl-300d-2M.vec",
            "embedding_dim": 300,
            "trainable": false
        }
    },
    "abstract_text_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 700,
      "hidden_size": 256,
      "num_layers": 1,
      "dropout": 0.2
    },
    "attention_encoder": {
      "type": "linear_attention",
      "input_dim": 512,
      "combination": "x,y,x*y",
      "dropout_prob": 0.2
    },
    "hidden_states_dropout": 0.2,
    "bce_pos_weight": 10,
    "use_positional_encoding": true
  },
  "iterator": {
    "type": "bucket",
    "max_instances_in_memory": 50000,
    "sorting_keys": [["abstract_text", "num_tokens"]],
    "batch_size": 1
  },
  "trainer": {
    "num_epochs": 100,
    "num_batches_before_step": 32,
    "cuda_device": 0,
    "learning_rate_scheduler": {
        "type": "reduce_on_plateau",
        "factor": 0.5,
        "mode": "min",
        "patience": 3
    },
    "optimizer": {
        "type": "adam",
        "lr": 0.001,
        // "momentum": 0.5
    },
    "patience": 10,
    "grad_clipping": 5.0
    // "validation_metric": "+roc_auc_score",
  }
}

{
  "dataset_reader": {
    "type": "etd_abstract",
    "lazy": true,
    "token_indexers": {
        "token_characters": {
            "type": "characters",
            "character_tokenizer": {
                "byte_encoding": "utf-8",
                "end_tokens": [
                    260
                ],
                "start_tokens": [
                    259
                ]
            }
        },
        "glove_tokens": {
            "type": "single_id",
            "lowercase_tokens": true
        },
        "conceptnet_tokens":{
            "type": "single_id",
            "lowercase_tokens": true            
        },
        "fasttext_tokens":{
            "type": "single_id",
            "lowercase_tokens": true               
        }
    }
  },
  "train_data_path": "/misc/projdata3/info_fil/finance/simon_test/ETD_cataloguing/allennlp-test/all_etd_abstract_train.json",
  "validation_data_path": "/misc/projdata3/info_fil/finance/simon_test/ETD_cataloguing/allennlp-test/cuhk_etd_abstract_validate.json",
  "model": {
    "type": "etd_transformer",
    "text_field_embedder": {
        "token_characters": {
            "type": "character_encoding",
            "dropout": 0.2,
            "embedding": {
                "embedding_dim": 20,
                "num_embeddings": 262
            },
            "encoder": {
                "type": "cnn",
                "embedding_dim": 20,
                "ngram_filter_sizes": [
                    5
                ],
                "num_filters": 100
            }
        },
        "glove_tokens": {
            "type": "embedding",
            "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
            "embedding_dim": 100,
            "trainable": false
        },
        "conceptnet_tokens": {
            "type": "embedding",
            "pretrained_file": "/uac/spc/proj/fpredict/finance/ETD_cataloguing/allennlp-test/word_vector/conceptnet/numberbatch-en-17.06.txt",
            "embedding_dim": 300,
            "trainable": false
        },
        "fasttext_tokens": {
            "type": "embedding",
            "pretrained_file": "/uac/spc/proj/fpredict/finance/ETD_cataloguing/allennlp-test/word_vector/fasttext/crawl-300d-2M.vec",
            "embedding_dim": 300,
            "trainable": false
        }
    },
    "abstract_text_encoder": {
      "type": "stacked_self_attention",
      "input_dim": 800,
      "hidden_dim": 800,
      "projection_dim": 800,
      "feedforward_hidden_dim": 800,
      "num_layers": 1,
      "num_attention_heads": 4
    },
    "attention_encoder": {
      "input_dim": 800,
      "combination": "x,y"
    },
    "classifier_feedforward": {
      "input_dim": 800,
      "num_layers": 2,
      "hidden_dims": [800, 47343],
      "activations": ["relu", "linear"],
      "bias": [true, true],
      "dropout": [0.2, 0.0]
    }
  },
  "iterator": {
    "type": "bucket",
    "max_instances_in_memory": 10000,
    "sorting_keys": [["abstract_text", "num_tokens"]],
    "batch_size": 2
  },
  "trainer": {
    "num_epochs": 40,
    "num_batches_before_step": 2048,
    "cuda_device": 3,
    /*"learning_rate_scheduler": {
        "type": "reduce_on_plateau",
        "factor": 0.5,
        "mode": "max",
        "patience": 3
    },*/
    "optimizer": {
        "type": "adam"
        // "lr": 0.01,
        // "momentum": 0.9
    },
    "patience": 10,
    "grad_clipping": 5.0
    // "validation_metric": "+roc_auc_score",
  }
}
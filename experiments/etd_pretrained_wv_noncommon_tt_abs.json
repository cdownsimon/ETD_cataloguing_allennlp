{
  "dataset_reader": {
    "type": "etd_abstract",
    "merge_title_abstract": true,
    "lazy": true,
    "token_indexers": {
        "token_characters": {
            "type": "characters",
            "character_tokenizer": {
                "byte_encoding": "utf-8",
                "end_tokens": [
                    260
                ],
                "start_tokens": [
                    259
                ]
            }
        },
        "glove_tokens": {
            "type": "single_id",
            "lowercase_tokens": true
        },
        /*"conceptnet_tokens":{
            "type": "single_id",
            "lowercase_tokens": true            
        },*/
        "fasttext_tokens":{
            "type": "single_id",
            "lowercase_tokens": true               
        }
    }
  },
  "train_data_path": "/misc/projdata3/info_fil/finance/simon_test/ETD_cataloguing/allennlp-test/data/all_etd_title_abstract_noncommon_train.json",
  "validation_data_path": "/misc/projdata3/info_fil/finance/simon_test/ETD_cataloguing/allennlp-test/data/cuhk_etd_title_abstract_validate.json",
  "model": {
    "type": "etd_rnn",
    "text_field_embedder": {
        "token_characters": {
            "type": "character_encoding",
            "dropout": 0.2,
            "embedding": {
                "embedding_dim": 20,
                "num_embeddings": 262
            },
            "encoder": {
                "type": "cnn",
                "embedding_dim": 20,
                "ngram_filter_sizes": [
                    5
                ],
                "num_filters": 100
            }
        },
        "glove_tokens": {
            "type": "embedding",
            "pretrained_file": "/uac/spc/proj/fpredict/finance/ETD_cataloguing/allennlp-test/word_vector/glove/glove.840B.300d.txt",
            "embedding_dim": 300,
            "trainable": false
        },
        /*"conceptnet_tokens": {
            "type": "embedding",
            "pretrained_file": "/uac/spc/proj/fpredict/finance/ETD_cataloguing/allennlp-test/word_vector/conceptnet/numberbatch-en-17.06.txt",
            "embedding_dim": 300,
            "trainable": false
        },*/
        "fasttext_tokens": {
            "type": "embedding",
            "pretrained_file": "/uac/spc/proj/fpredict/finance/ETD_cataloguing/allennlp-test/word_vector/fasttext/crawl-300d-2M.vec",
            "embedding_dim": 300,
            "trainable": false
        }
    },
    "abstract_text_encoder": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 700,
      "hidden_size": 700,
      "num_layers": 1,
      "dropout": 0.2
    },
    "attention_encoder": {
      "input_dim": 1400,
      "combination": "x,y"
    }, 
    "classifier_feedforward": {
      "type": "feedforward",
      "input_dim": 1400,
      "num_layers": 2,
      "hidden_dims": [1400, 47719],
      "activations": ["relu", "linear"],
      "bias": [true, true],
      "dropout": [0.2, 0.0]
    },
    "use_positional_encoding": true
  },
  "iterator": {
    "type": "bucket",
    "max_instances_in_memory": 50000,
    "sorting_keys": [["abstract_text", "num_tokens"]],
    "batch_size": 4
  },
  "trainer": {
    "num_epochs": 100,
    "num_batches_before_step": 1024,
    "cuda_device": 3,
    "learning_rate_scheduler": {
        "type": "reduce_on_plateau",
        "factor": 0.5,
        "mode": "min",
        "patience": 3
    },
    "optimizer": {
        "type": "adam",
        "lr": 0.001,
        // "momentum": 0.5
    },
    "patience": 10,
    "grad_clipping": 5.0
    // "validation_metric": "+roc_auc_score",
  }
}

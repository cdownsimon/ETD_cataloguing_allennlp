            "embedding_dim": 300,
            "trainable": false
        }*/
    },
    "embedding_dropout": 0.0,
    "pre_encode_feedforward": {
        "input_dim": 300,
        "num_layers": 1,
        "hidden_dims": [300],
        "activations": ["relu"],
        "bias": [true],
        "dropout": [0.2]
    },
    "encoder": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 300,
      "hidden_size": 300,
      "num_layers": 1,
      "dropout": 0.2
    },
    "integrator": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 1800,
      "hidden_size": 900,
      "num_layers": 1,
      "dropout": 0.2
    },
    "integrator_dropout": 0.2,
    "output_layer": {
      "input_dim": 7200,
      "num_layers": 2,
      "hidden_dims": [7200, 241],
      "activations": ["relu", "linear"],
      "bias": [true, true],
      "dropout": [0.2, 0.0]
    },
    "elmo": null
  },
  "iterator": {
    "type": "bucket",
    "max_instances_in_memory": 10000,
    "sorting_keys": [["abstract_text", "num_tokens"]],
    "batch_size": 4
  },
  "trainer": {
    "num_epochs": 100,
    "num_batches_before_step": 16,

{
  "dataset_reader": {
    "type": "etd_abstract",
    "lazy": true,
    "token_indexers": {
        "elmo": {
            "type": "elmo_characters"
        },
        "token_characters": {
            "type": "characters",
            "character_tokenizer": {
                "byte_encoding": "utf-8",
                "end_tokens": [
                    260
                ],
                "start_tokens": [
                    259
                ]
            }
        }
        /*"glove_tokens": {
            "type": "single_id",
            "lowercase_tokens": true
        },
        "conceptnet_tokens":{
            "type": "single_id",
            "lowercase_tokens": true            
        },
        "fasttext_tokens":{
            "type": "single_id",
            "lowercase_tokens": true               
        }*/
    }
  },
  "train_data_path": "./data/all_etd_abstract_train.json",
  "validation_data_path": "./data/cuhk_etd_abstract_validate.json",
  "model": {
    "type": "etd_rnn",
    "text_field_embedder": {
        "elmo": {
            "type": "elmo_token_embedder",
            "do_layer_norm": true,
            "dropout": 0.5,
            "options_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x4096_512_2048cnn_2xhighway/elmo_2x4096_512_2048cnn_2xhighway_options.json",
            "weight_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x4096_512_2048cnn_2xhighway/elmo_2x4096_512_2048cnn_2xhighway_weights.hdf5"
        },
        "token_characters": {
            "type": "character_encoding",
            "dropout": 0.5,
            "embedding": {
                "embedding_dim": 20,
                "num_embeddings": 262
            },
            "encoder": {
                "type": "cnn",
                "embedding_dim": 20,
                "ngram_filter_sizes": [
                    5
                ],
                "num_filters": 100
            }
        }
        /*"glove_tokens": {
            "type": "embedding",
            "pretrained_file": "./word_vector/glove/glove.840B.300d.txt",
            "embedding_dim": 300,
            "trainable": false
        },
        "conceptnet_tokens": {
            "type": "embedding",
            "pretrained_file": "./word_vector/conceptnet/numberbatch-en-17.06.txt",
            "embedding_dim": 300,
            "trainable": false
        },
        "fasttext_tokens": {
            "type": "embedding",
            "pretrained_file": "./word_vector/fasttext/crawl-300d-2M.vec",
            "embedding_dim": 300,
            "trainable": false
        }*/
    },
    "abstract_text_encoder": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 1124,
      "hidden_size": 1124,
      "num_layers": 1,
      "dropout": 0.2
    },
    "attention_encoder": {
      "input_dim": 2248,
      "combination": "x,y"
    }, 
    "classifier_feedforward": {
      "type": "feedforward",
      "input_dim": 2248,
      "num_layers": 2,
      "hidden_dims": [2248, 47343],
      "activations": ["relu", "linear"],
      "bias": [true, true],
      "dropout": [0.2, 0.0]
    },
    "use_positional_encoding": true
  },
  "iterator": {
    "type": "bucket",
    "max_instances_in_memory": 50000,
    "sorting_keys": [["abstract_text", "num_tokens"]],
    "batch_size": 2
  },
  "trainer": {
    "num_epochs": 100,
    "num_batches_before_step": 2048,
    "cuda_device": 1,
    "learning_rate_scheduler": {
        "type": "reduce_on_plateau",
        "factor": 0.5,
        "mode": "min",
        "patience": 3
    },
    "optimizer": {
        "type": "adam",
        "lr": 0.001,
        // "momentum": 0.9
    },
    "patience": 10,
    "grad_clipping": 5.0
    // "validation_metric": "+roc_auc_score",
  }
}
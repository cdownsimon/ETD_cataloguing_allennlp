{
  "dataset_reader": {
    "type": "etd_abstract",
    "lazy": true,
    "token_indexers": {
        "glove_tokens": {
            "type": "single_id",
            "lowercase_tokens": true
        }/*,
        "conceptnet_tokens":{
            "type": "single_id",
            "lowercase_tokens": true            
        },
        "fasttext_tokens":{
            "type": "single_id",
            "lowercase_tokens": true               
        }*/
    }
  },
  "train_data_path": "/misc/projdata3/info_fil/finance/simon_test/ETD_cataloguing/allennlp-test/etd_debug.json",
  "validation_data_path": "/misc/projdata3/info_fil/finance/simon_test/ETD_cataloguing/allennlp-test/etd_debug.json",
  "model": {
    "type": "etd_rnn",
    "text_field_embedder": {
        "glove_tokens": {
            "type": "embedding",
            "pretrained_file": "/uac/spc/proj/fpredict/finance/ETD_cataloguing/allennlp-test/word_vector/glove/glove.6B.100d.txt",
            "embedding_dim": 100,
            "trainable": false
        }/*,
        "conceptnet_tokens": {
            "type": "embedding",
            "pretrained_file": "/uac/spc/proj/fpredict/finance/ETD_cataloguing/allennlp-test/word_vector/conceptnet/numberbatch-en-17.06.txt",
            "embedding_dim": 300,
            "trainable": false
        },
        "fasttext_tokens": {
            "type": "embedding",
            "pretrained_file": "/uac/spc/proj/fpredict/finance/ETD_cataloguing/allennlp-test/word_vector/fasttext/crawl-300d-2M.vec",
            "embedding_dim": 300,
            "trainable": false
        }*/
    },
    "abstract_text_encoder": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.2
    },
    "attention_encoder": {
        "input_dim": 200,
        "combination": "x,y,x*y"
    }, 
    "classifier_feedforward": {
      "input_dim": 200,
      "num_layers": 2,
      "hidden_dims": [800, 241],
      "activations": ["relu", "linear"],
      "bias": [true, true],
      "dropout": [0.2, 0.0]
    },
    "use_positional_encoding": true
  },
  "iterator": {
    "type": "bucket",
    "max_instances_in_memory": 10000,
    "sorting_keys": [["abstract_text", "num_tokens"]],
    "batch_size": 8
  },
  "trainer": {
    "num_epochs": 10,
    "num_batches_before_step": 4,
    "cuda_device": 1,
    /*"learning_rate_scheduler": {
        "type": "reduce_on_plateau",
        "factor": 0.5,
        "mode": "max",
        "patience": 3
    },*/
    "optimizer": {
        "type": "adam"
        // "lr": 0.01,
        // "momentum": 0.9
    },
    "patience": 10,
    "grad_clipping": 5.0
    // "validation_metric": "+roc_auc_score",
  }
}
{
  "dataset_reader": {
    "type": "etd_abstract",
    "lazy": true,
    "token_indexers": {
        "token_characters": {
            "type": "characters",
            "character_tokenizer": {
                "byte_encoding": "utf-8",
                "end_tokens": [
                    260
                ],
                "start_tokens": [
                    259
                ]
            }
        },
        "glove_tokens": {
            "type": "single_id",
            "lowercase_tokens": true
        },
        "fasttext_tokens":{
            "type": "single_id",
            "lowercase_tokens": true               
        },
        "region_tokens":{
            "type": "single_id",
            "lowercase_tokens": true
        }
    }
  },
  "train_data_path": "./data/etd_debug.json",
  "validation_data_path": "./data/etd_debug.json",
  "model": {
    "type": "etd_rnn_sap",
    "text_field_embedder": {
        "token_characters": {
            "type": "character_encoding",
            "dropout": 0.2,
            "embedding": {
                "embedding_dim": 20,
                "num_embeddings": 262
            },
            "encoder": {
                "type": "cnn",
                "embedding_dim": 20,
                "ngram_filter_sizes": [
                    5
                ],
                "num_filters": 100
            }
        },
        "glove_tokens": {
            "type": "embedding",
            "pretrained_file": "./word_vector/glove/glove.840B.300d.txt",
            "embedding_dim": 300,
            "trainable": false
        },
        "fasttext_tokens": {
            "type": "embedding",
            "pretrained_file": "./word_vector/fasttext/crawl-300d-2M.vec",
            "embedding_dim": 300,
            "trainable": false
        },
        "region_tokens": {
            "type": "region_embedding",
            "embedding_dim": 100,
            "context_window": 7,
            "mode": "max",
            "padding_index": 0,
            "trainable": true
        },        
    },
    "abstract_text_encoder": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 800,
      "hidden_size": 400,
      "num_layers": 1,
      "dropout": 0.2
    },
    "attention_encoder": {
        "type": "self_attention",
        "input_dim": 800,
        "hidden_dim": 200,
        "num_hops": 5,
        "dropout_prob": 0.5
    }, 
    "classifier_feedforward": {
      "type": "feedforward",
      "input_dim": 4000,
      "num_layers": 2,
      "hidden_dims": [4000, 241], // 47343
      "activations": ["relu", "linear"],
      "bias": [true, true],
      "dropout": [0.5, 0.0]
    },
    "penalty_coef": 0.0,
    "use_positional_encoding": false
  },
  "iterator": {
    "type": "bucket",
    "max_instances_in_memory": 50000,
    "sorting_keys": [["abstract_text", "num_tokens"]],
    "batch_size": 2
  },
  "trainer": {
    "num_epochs": 100,
    "num_batches_before_step": 16,
    "cuda_device": 0,
    "learning_rate_scheduler": {
        "type": "reduce_on_plateau",
        "factor": 0.5,
        "mode": "min",
        "patience": 3
    },
    "optimizer": {
        "type": "adam",
        "lr": 0.001,
        // "momentum": 0.5
    },
    "patience": 10,
    "grad_clipping": 5.0,
    // "validation_metric": "+hit_5"
  }
}